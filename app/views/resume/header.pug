- 
  formatPhone = p =>
    `8 (${p.substring(2, 5)}) ${p.substring(5, 8)} ${p.substring(8, 10)} ${p.substring(10)}`;

.header
  img.header__photo(src=`${publicDir || ''}/assets/avatar.jpg` alt='Photo')
  section.header__info
    h1.name #{profile.name}
    a.email(href=`mailto:${connects.email}` target='_blank')
      | #{connects.email}
    a.phone(href=`tel:${connects.phone}` target='_blank')
      | #{ formatPhone(connects.phone) }